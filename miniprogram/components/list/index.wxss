.list {
  width: 80%;
  box-sizing: border-box;
  background-color: #ffdede;
  border-radius: 60rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  justify-content: space-between;
  align-items: center;
  margin-left: auto;
  margin-right: auto;
  display: flex;
  flex-direction: column;
}
.list .listBox {
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-self: center;
  align-items: center;
  padding: 0 32rpx;
  font-size: 32rpx;
  line-height: 48rpx;
  color: #333;
  
}

.list .listBox .name {
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  width: 100%;
  font-size: 40rpx;
}
.list .listBox .detail {
  display: flex;
  justify-content: center;
  width: 100%;
  font-size: 20rpx;
  color: gray;
  font-style: italic;
}

