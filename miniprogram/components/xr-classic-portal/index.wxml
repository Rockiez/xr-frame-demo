<xr-scene ar-system="modes:Plane" id="xr-scene" bind:ready="handleReady">

  <xr-assets bind:progress="handleAssetsProgress" bind:loaded="handleAssetsLoaded">
    <xr-asset-load type="gltf" asset-id="anchor" src="/assets/gltf/anchor.glb" /> 

    <xr-asset-load type="gltf" asset-id="char1" src="https://thh-ar-miniprogram.obs.cn-east-3.myhuaweicloud.com:443/jinx.glb?AccessKeyId=5BWMQQ24QVRXZFXDRO86&Expires=1712884378&Signature=WLbo0c9stwygK/hCkSALMzoXbY8%3D" />
    <xr-asset-load type="gltf" asset-id="char2" src="https://thh-ar-miniprogram.obs.cn-east-3.myhuaweicloud.com:443/lux.glb?AccessKeyId=5BWMQQ24QVRXZFXDRO86&Expires=1713337124&Signature=XnYPAGUXaGL%2Bx/Y%2BnNp11uBOk88%3D" />
    <xr-asset-load type="gltf" asset-id="char3" src="https://mmbizwxaminiprogram-1258344707.cos.ap-guangzhou.myqcloud.com/xr-frame/demo/ship_in_clouds/scene.gltf" />

  </xr-assets>


  <xr-node wx:if="{{loaded}}">

    <xr-ar-tracker mode="Plane">
      <xr-gltf wx:if="{{anchor}}" id="anchor" model="anchor" scale="1 1 1" />
    </xr-ar-tracker>

    <xr-node id="char1" node-id="char1" visible="false">
      <xr-gltf wx:if="{{char1}}" model="char1" scale="0.5 0.5 0.5 " anim-autoplay cube-shape="autoFit:true" shape-gizmo  position="0 0 0"  bind:touch-shape="handleTouchModel"/>
    </xr-node>

    <xr-node id="char2" node-id="char2" visible="false">
      <xr-gltf wx:if="{{char2}}" model="char2" scale="5 5 5 " anim-autoplay cube-shape="autoFit:true" shape-gizmo  position="0 0 0" bind:touch-shape="handleTouchModel"/>
    </xr-node>

    <xr-node id="char3" node-id="char3" visible="false">
      <xr-gltf wx:if="{{char3}}" model="char3"  anim-autoplay cube-shape="autoFit:true" shape-gizmo  position="0 0 0" bind:touch-shape="handleTouchModel"/>
    </xr-node>
    
  </xr-node>

  <xr-camera
    id="main-camera" near="0.1" far="2000"
    background="ar" is-ar-camera clear-color="1 0 0 1"
    
  />

  <xr-node node-id="lights">
    <xr-light type="ambient" color="1 1 1" intensity="3" />
    <xr-light type="directional" rotation="180 0 0" color="1 1 1" intensity="4" />
  </xr-node>

</xr-scene>
