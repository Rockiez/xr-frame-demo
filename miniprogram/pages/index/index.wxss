.main {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: auto;
  box-sizing: content-box;
  padding-top: 100rpx;
  padding-bottom: 80rpx;
  background-color: #FFADAD;
}
.slogen-wrap {
  padding-top: 50rpx;
  padding-left: 80rpx;
  padding-right: 16rpx;
  margin-bottom: 48rpx;
}
.slogen {
  text-align: left;
  font-size: 80rpx;
  font-weight: bold;
  color: #eeeeee;
  line-height: 80rpx;
}
.slogen .special {
  display: inline-block;
  font-size: 80rpx;
  font-weight: 300;
  color: #000;
}

.intro {
  text-align: left;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.4);
}

.nav-btn {
  text-align: center;
  background: #eeeeee;
  margin: 20rpx 0;
  padding: 30rpx;
  border-radius: 5px;
}

